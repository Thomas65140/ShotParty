<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fond_appli"
    tools:context=".Play">

    <ImageView
        android:id="@+id/roue"
        android:layout_width="336dp"
        android:layout_height="335dp"

        android:layout_centerInParent="true"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/roue" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="44dp"
        android:layout_height="25dp"

        android:layout_above="@+id/roue"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/fleche" />

    <Button
        android:id="@+id/Button_turn"
        android:layout_width="199dp"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="42dp"
        android:background="@drawable/custom_bouton_roue"

        android:text="@string/bouton_lancer"
        android:textColor="@color/black"
        android:textSize="15sp"

        />

    <Button
        android:id="@+id/Button_suite"
        android:layout_width="199dp"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="42dp"
        android:background="@drawable/custom_bouton_roue"

        android:text="@string/bouton_suite"
        android:textColor="@color/black"
        android:textSize="15sp"

        />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:srcCompat="@drawable/centre_roue" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="88dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        app:srcCompat="@drawable/titre_appli" />

    <TextView
        android:id="@+id/textCouleur"
        android:layout_width="123dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/roue"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text=""

        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>